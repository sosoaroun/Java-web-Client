<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
    <RollingFile name="fichierRoulantTemp" fileName="/Users/sofiane/Desktop/TestJPA.log" filePattern="/Users/sofiane/Desktop/$${date:yyyy-MM}TestJPA-%d{MM-dd-yyyy}-%i.log">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      
      <Policies>
      	<TimeBasedTriggeringPolicy interval="1" modulate="true"/>
      </Policies>
      
     </RollingFile>
      

  </Appenders>
  <Loggers>
	  <Logger name="com.ynov.bank" level="info" additivity="false"> <!-- additivity a false cest pour supprimer les doublon -->
	  	<AppenderRef ref="Console"/>
	  	<AppenderRef ref="fichierRoulantTemp"/>
	  </Logger>
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>